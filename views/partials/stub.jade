mixin stub(project)
  - var route = 'projects/'+project.route
  div.project.pure-g
    div.pure-u-1.pure-u-med-1-4
      a(href= route)
        h3= project.title
      div
        i= project.subjects.join(', ')
    div.pure-u-med-3-4
      div.pure-u-1.pure-u-lrg-1-3
        i.fa.fa-user
        label= project.lead
      div.pure-u-1.pure-u-lrg-1-4
        i.fa.fa-map-marker
        label= project.institute
      div.pure-u-1.pure-u-lrg-5-12
        i.fa.fa-tag
        label= project.languages.join(', ')
    div.pure-u-1.pure-u-med-1-4.sidebar
      a(href= route)
        div.crop
          - var image = 'static/img/'+project.imageName
          img(src= image)
    div.pure-u-1.pure-u-med-3-4
      p= project.summary.slice(0, 400) + "..."